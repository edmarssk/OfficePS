@model OfficePS.Models.Procedimentos;


<h2>Inclusão de Procedimentos</h2>

<form asp-controller="Procedimento" asp-action="Create" method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Nome" class="control-label col-md-1">Nome:</label>
        <div class="col-md-4">
            <input type="text" required class="form-control" name="Nome" asp-for="Nome" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-1">Descrição:</label>
        <div class="col-md-8">
            <textarea rows="5" name="Descricao" class="form-control col-lg-5" asp-for="Descricao"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Valor" class="control-label col-md-1"></label>
        <div class="col-md-4">
            <input type="number" class="form-control col-lg-3" name="Valor" asp-for="Valor" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-1">Ativo:</label>
        <div class="col-md-2">
            <input type="checkbox" class="checkbox" name="Ativo" asp-for="Ativo" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <input type="submit" class="btn btn-primary" value="Incluir" />
        </div>
    </div>
</form>
