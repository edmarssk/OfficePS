@model OfficePS.ViewModels.ClienteVM;


<h2>@Model.Nome </h2>
<div class="thumbnail">
   <img alt="@Model.Nome" src="~/image/@Model.FotoPerfil" />
   <div class="caption">
       <h3 class="pull-left">@Model.Nome</h3>
       <h3>
           CPF: @Model.Cpf    RG: @Model.Rg <br />
       </h3>
       <h3>
           Telefone: @Model.Telefone Celular:@Model.TelefoneCelular
       </h3>
       <h4>Data de Nascimento: @Model.DtNascimento.ToString("dd/MM/yyyy")</h4><br />
       <h4>Sexo: 
            <select name="@Model.Sexo" asp-for="@Model.Sexo" >
                <option value="M">Masculino</option>
                <option value="F">Feminino</option>
            </select> 
       </h4>
       <p>@Model.Email</p>

   </div>

</div>
<div>
    <a asp-action="Index">Voltar</a>
</div>

